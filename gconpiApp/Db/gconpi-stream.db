record (stringin, "$(SYSDEV)CPS_MSG")
{
}


record (ai, "$(SYSDEV)CPS") 
{
    field(DESC, "Geiger Counter Counter Per Secoud") 
    field(DTYP, "stream")
    field( INP, "@gconpi.proto read_CPS($(SYSDEV)CPS_MSG) $(PORT)")
    field( EGU, "CPS")
    field(SCAN, "1 second")
}


